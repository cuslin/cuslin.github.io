---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const { longform = true } = Astro.props;
---

<header>
	<nav>
		<div>
			<h2><a href="/">{SITE_TITLE}</a></h2>
			{longform && <p class="site-description">{SITE_DESCRIPTION}</p>}
		</div>
	</nav>
</header>
<style>
	header {
  		font-family: "GrandheronSerifNew";
	    font-style: italic;
	    font-stretch: normal;
    	font-weight: 600;
		color: var(--text-color);
		font-size: 64px;
		margin: 0;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		font-family: inherit;
		font-style: italic;
		font-weight: 600;
		margin: 0;
		font-size: 1em;
	}

	.site-description {
		
  font-family: "GrandheronSansNew";
  font-style: normal;
  font-stretch: normal;
  font-weight: 400;
  font-variant: small-caps;

		font-size: 0.4em; /* Adjust as needed */
		margin: 0;
		
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		/* padding: 1em 0.5em; */
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
